pipeline {
    agent any
    environment {
        secret_key=credentials('secret_key')
    }
    stages {
        stage('Build') {
            steps {
                sh "sudo apt install -y python3-pip"
                sh "export SECRET_KEY=${secret_key}"
            }
        }
        stage('Dependencies') {
            steps {
                sh "pip install -r requirements.txt"
            }
        }
        stage('Deploy') {
            steps {
            sh "python3 app.py"
            }
        }
    }
}